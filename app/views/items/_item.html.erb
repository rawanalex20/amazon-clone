<div id="<%= dom_id item %>">
  <p>
    <strong>Cover:</strong>
    <%= image_tag(item.cover, size: "200x200") %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>

  <p>
  <strong>Uploads:</strong>
  <% item.uploads.each do |u| %>
    <%= image_tag(u, size: "200x200") %>
    
  <% end %>
</p>

</div>
